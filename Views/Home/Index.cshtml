@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<div class="container mt-5">
    <div class="row align-items-center">
        <!-- Sección de texto -->
        <div class="col-md-6 mb-4">
            <h1 class="display-4 fw-bold" style="color: #ff7a00;">¡Bienvenido a MesaListo!</h1>
            <p class="lead text-muted mt-4">
                MesaListo es una plataforma diseñada para facilitar la <strong>reserva de mesas en restaurantes</strong>.
                Los clientes pueden explorar opciones, hacer reservas en segundos y dejar reseñas de su experiencia.
                Los restaurantes, por su parte, pueden gestionar sus mesas, visualizar reservas en tiempo real y acceder a un panel personalizado.
            </p>

            @if (!SignInManager.IsSignedIn(User))
            {
                <div class="mt-4 d-flex gap-3">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn text-white px-4 py-2" style="background-color: #ff7a00;">
                        <i class="fas fa-sign-in-alt"></i> Iniciar sesión
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-warning px-4 py-2">
                        <i class="fas fa-user-plus"></i> Registrarse
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-success mt-4">
                    <h4 class="mb-0">¡Hola, @User.Identity.Name!</h4>
                    <p class="mt-2 mb-0">Ya puedes acceder a tus funciones según tu rol.</p>
                </div>
            }
        </div>

        <!-- Sección de imagen -->
        <div class="col-md-6 text-center">
            <img src="~/mesa-listo-banner.jpg" alt="MesaListo ilustración" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: cover;">
        </div>
    </div>
</div>
