@model List<MesaListo.Models.Restaurante>

@{
    ViewData["Title"] = "Inicio - MesaListo";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-primary">Bienvenido a MesaListo</h1>
    <p class="lead">Reserva tu mesa favorita de manera fácil y rápida</p>
</div>

<div class="row">
    @foreach (var restaurante in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">@restaurante.Nombre</h5>
                    <p class="card-text">
                        <i class="fas fa-map-marker-alt text-danger"></i> @restaurante.Direccion<br>
                        <i class="fas fa-phone text-success"></i> @restaurante.Telefono
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="#" class="btn btn-primary btn-sm">
                        <i class="fas fa-calendar-plus"></i> Reservar Mesa
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>No hay restaurantes disponibles</h4>
        <p>Próximamente tendremos más opciones para ti.</p>
    </div>
}