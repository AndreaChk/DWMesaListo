@model IEnumerable<MesaListo.Models.Restaurante>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Restaurantes";
    var currentUserId = UserManager.GetUserId(User);
    var isAdmin = User.IsInRole("Admin");
    var isRestaurante = User.IsInRole("Restaurante");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-utensils text-warning me-2"></i>Restaurantes
            <small class="text-muted fs-6">(@Model.Count() registros)</small>
        </h1>

        @if (User.IsInRole("Admin") || User.IsInRole("Restaurante"))
        {
            <a asp-action="Create" class="btn btn-warning">
                <i class="fas fa-plus me-2"></i>Nuevo Restaurante
            </a>
        }
    </div>

    <!-- Mensajes informativos -->
    @if (isAdmin)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Vista de Administrador:</strong> Viendo todos los restaurantes del sistema.
        </div>
    }
    else if (isRestaurante)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Vista de Restaurante:</strong> Viendo solo sus restaurantes.
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No hay restaurantes registrados</h4>
                <p class="text-muted">@(isRestaurante ? "Comienza creando tu primer restaurante." : "No se encontraron restaurantes.")</p>
                @if (User.IsInRole("Admin") || User.IsInRole("Restaurante"))
                {
                    <a asp-action="Create" class="btn btn-warning mt-2">
                        <i class="fas fa-plus me-2"></i>Crear Restaurante
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-warning">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                            <p class="card-text">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>@Html.DisplayFor(modelItem => item.Direccion)<br>
                                <i class="fas fa-phone text-success me-2"></i>@Html.DisplayFor(modelItem => item.Telefono)
                            </p>
                            <div class="mt-3">
                                <span class="badge bg-info">
                                    <i class="fas fa-chair me-1"></i>
                                    @item.Mesas?.Count mesas
                                </span>
                                @if (isAdmin)
                                {
                                    <span class="badge bg-secondary ms-1">
                                        <i class="fas fa-user me-1"></i>
                                        @item.UsuarioId
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Ver
                                </a>

                                @if (User.IsInRole("Admin") || (User.IsInRole("Restaurante") && item.UsuarioId == currentUserId))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                }

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Eliminar
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>