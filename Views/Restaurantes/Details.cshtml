@model MesaListo.Models.Restaurante
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Detalles del Restaurante";
    var currentUserId = UserManager.GetUserId(User);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-utensils text-warning me-2"></i>@Model.Nombre</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Volver
        </a>

        <!-- SOLO Admin y Restaurante (dueño) pueden editar -->
        @if (User.IsInRole("Admin") || (User.IsInRole("Restaurante") && Model.UsuarioId == currentUserId))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Editar
            </a>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información del Restaurante</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nombre:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4">Dirección:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                    <dt class="col-sm-4">Teléfono:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                    <dt class="col-sm-4">Total de Mesas:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-warning">@Model.Mesas?.Count mesas</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-chair me-2"></i>Mesas Disponibles</h5>
            </div>
            <div class="card-body">
                @if (Model.Mesas?.Any() == true)
                {
                    <div class="row">
                        @foreach (var mesa in Model.Mesas)
                        {
                            <div class="col-6 mb-2">
                                <div class="border rounded p-2 text-center">
                                    <strong>@mesa.Codigo</strong><br>
                                    <small class="text-muted">Capacidad: @mesa.Capacidad</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No hay mesas registradas para este restaurante.</p>
                }
            </div>
        </div>
    </div>
</div>