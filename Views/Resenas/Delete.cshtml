@model MesaListo.Models.Resena

@{
    ViewData["Title"] = "Eliminar Reseña";
}

<h1 class="mb-4 text-danger">
    <i class="fas fa-trash me-2"></i> Eliminar Reseña
</h1>

<div class="alert alert-danger">
    <strong>¿Estás seguro que deseas eliminar esta reseña?</strong>
</div>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Puntuación</dt>
        <dd class="col-sm-9">@Model.Puntuacion ⭐</dd>

        <dt class="col-sm-3">Comentario</dt>
        <dd class="col-sm-9">@Model.Comentario</dd>

        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.Cliente?.Email</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="fas fa-arrow-left me-2"></i>Cancelar
        </a>
    </form>
</div>
