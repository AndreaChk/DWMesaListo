@model MesaListo.Models.Resena

@{
    ViewData["Title"] = "Detalles de Reseña";
}

<h1 class="mb-4">
    <i class="fas fa-info-circle text-warning me-2"></i> Detalles de Reseña
</h1>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Reserva</dt>
        <dd class="col-sm-9">@Model.Reserva?.Mesa?.Restaurante?.Nombre</dd>

        <dt class="col-sm-3">Puntuación</dt>
        <dd class="col-sm-9">@Model.Puntuacion ⭐</dd>

        <dt class="col-sm-3">Comentario</dt>
        <dd class="col-sm-9">@Model.Comentario</dd>

        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.Cliente?.Email</dd>

        <dt class="col-sm-3">Fecha</dt>
        <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
        <i class="fas fa-edit me-2"></i>Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Volver
    </a>
</div>
