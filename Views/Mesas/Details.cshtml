@model MesaListo.Models.Mesa

@{
    ViewData["Title"] = "Detalles de Mesa";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chair me-2"></i>Mesa: @Model.Codigo
                        <span class="badge bg-light text-dark ms-2">Capacidad: @Model.Capacidad</span>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información de la Mesa</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Código:</dt>
                                        <dd class="col-sm-8 fw-bold text-warning">@Model.Codigo</dd>

                                        <dt class="col-sm-4">Capacidad:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info">@Model.Capacidad personas</span>
                                        </dd>

                                        <dt class="col-sm-4">Restaurante:</dt>
                                        <dd class="col-sm-8 fw-bold">@Model.Restaurante?.Nombre</dd>

                                        <dt class="col-sm-4">Reservas Activas:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge @GetReservasBadgeClass(Model.Reservas?.Count ?? 0)">
                                                @(Model.Reservas?.Count(r => r.Estado != "Cancelada") ?? 0) reservas
                                            </span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0"><i class="fas fa-utensils me-2"></i>Información del Restaurante</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Nombre:</dt>
                                        <dd class="col-sm-8">@Model.Restaurante?.Nombre</dd>

                                        <dt class="col-sm-4">Dirección:</dt>
                                        <dd class="col-sm-8">
                                            <i class="fas fa-map-marker-alt me-1 text-danger"></i>
                                            @Model.Restaurante?.Direccion
                                        </dd>

                                        <dt class="col-sm-4">Teléfono:</dt>
                                        <dd class="col-sm-8">
                                            <i class="fas fa-phone me-1 text-success"></i>
                                            @Model.Restaurante?.Telefono
                                        </dd>

                                        <dt class="col-sm-4">Total Mesas:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-secondary">@Model.Restaurante?.Mesas?.Count mesas</span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Reservas recientes -->
                    @if (Model.Reservas?.Any() == true)
                    {
                        <div class="card">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0"><i class="fas fa-calendar me-2"></i>Reservas Recientes</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm table-hover">
                                        <thead>
                                            <tr>
                                                <th>Fecha</th>
                                                <th>Cliente</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var reserva in Model.Reservas.OrderByDescending(r => r.FechaHora).Take(5))
                                            {
                                                <tr>
                                                    <td>@reserva.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>@reserva.Cliente?.Email</td>
                                                    <td>
                                                        <span class="badge @GetEstadoBadgeClass(reserva.Estado)">@reserva.Estado</span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.Reservas.Count > 5)
                                {
                                    <div class="text-center mt-2">
                                        <small class="text-muted">Mostrando las 5 reservas más recientes de @Model.Reservas.Count totales</small>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>Esta mesa no tiene reservas registradas.
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                        </a>

                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-2"></i>Editar Mesa
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="fas fa-trash me-2"></i>Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetEstadoBadgeClass(string estado)
    {
        return estado switch
        {
            "Pendiente" => "bg-warning",
            "Confirmada" => "bg-success",
            "Cancelada" => "bg-danger",
            "Completada" => "bg-info",
            _ => "bg-secondary"
        };
    }

    public string GetReservasBadgeClass(int count)
    {
        return count == 0 ? "bg-success" : "bg-warning";
    }
}