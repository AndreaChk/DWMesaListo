@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MesaListo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/Favicon.png" asp-append-version="true" />
</head>

<body>
    <header>
        @if (!User.Identity.IsAuthenticated)
        {
            <!-- Navbar pública para usuarios no autenticados -->
            <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
                <div class="container">
                    <a class="navbar-brand text-primary fw-bold" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-utensils me-2"></i>MesaListo
                    </a>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
        else
        {
            <!-- Navbar para usuarios autenticados - TODOS con color naranja -->
            <nav class="navbar navbar-expand-sm navbar-dark bg-warning border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand text-dark" asp-controller="Home" asp-action="Index">
                        <i class="@GetNavbarIcon() me-2"></i>@GetNavbarTitle()
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarMain">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Restaurantes" asp-action="Index">Restaurantes</a>
                            </li>

                            <!-- Botón Crear Restaurante - SOLO Admin y Restaurante -->
                            @if (User.IsInRole("Admin") || User.IsInRole("Restaurante"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Restaurantes" asp-action="Create">
                                        <i class="fas fa-plus me-1"></i>Crear Restaurante
                                    </a>
                                </li>
                            }

                            <!-- Menú para Admin y Restaurante -->
                            @if (User.IsInRole("Admin") || User.IsInRole("Restaurante"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Mesas" asp-action="Index">
                                        <i class="fas fa-chair me-1"></i>Mesas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Reservas" asp-action="Index">
                                        <i class="fas fa-calendar-check me-1"></i>Reservas
                                    </a>
                                </li>
                            }

                            <!-- Menú para Cliente -->
                            @if (User.IsInRole("Cliente"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Reservas" asp-action="Index">
                                        <i class="fas fa-calendar me-1"></i>Mis Reservas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Reservas" asp-action="Create">
                                        <i class="fas fa-plus me-1"></i>Nueva Reserva
                                    </a>
                                </li>
                            }

                            <!-- Reseñas visible para todos los roles autenticados -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Resenas" asp-action="Index">
                                        <i class="fas fa-star me-1"></i>Reseñas
                                    </a>
                                </li>
                            }
                        </ul>

                        <!-- Partial de Login -->
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!-- Mostrar mensajes temporales -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MesaListo - Sistema de Reservas
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@functions {
    // Métodos helper para determinar estilos según el rol
    private string GetNavbarIcon()
    {
        if (User.IsInRole("Admin")) return "fas fa-user-shield";
        if (User.IsInRole("Restaurante")) return "fas fa-utensils";
        if (User.IsInRole("Cliente")) return "fas fa-user";
        return "fas fa-utensils";
    }

    private string GetNavbarTitle()
    {
        if (User.IsInRole("Admin")) return "Administrador";
        if (User.IsInRole("Restaurante")) return "Mi Restaurante";
        if (User.IsInRole("Cliente")) return "Cliente";
        return "MesaListo";
    }
}