@model IEnumerable<MesaListo.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-calendar-check text-warning me-2"></i>
        @if (User.IsInRole("Cliente"))
        {
            <text>Mis Reservas</text>
        }
        else if (User.IsInRole("Restaurante"))
        {
            <text>Reservas de Mis Mesas</text>
        }
        else
        {
            <text>Todas las Reservas</text>
        }
    </h1>

    <!-- SOLO Clientes pueden crear reservas -->
    @if (User.IsInRole("Cliente"))
    {
        <a asp-action="Create" class="btn btn-warning">
            <i class="fas fa-plus me-2"></i>Nueva Reserva
        </a>
    }
</div>

<!-- Resto de la tabla de reservas se mantiene igual -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Restaurante</th>
            <th>Mesa</th>
            <th>Fecha y Hora</th>
            <th>Cliente</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Mesa?.Restaurante?.Nombre</td>
                <td>@item.Mesa?.Codigo</td>
                <td>@item.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Cliente?.Email</td>
                <td>
                    <span class="badge @GetEstadoBadgeClass(item.Estado)">@item.Estado</span>
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                            <i class="fas fa-eye"></i>
                        </a>

                        <!-- SOLO Admin y Restaurante pueden editar reservas -->
                        @if (User.IsInRole("Admin") || User.IsInRole("Restaurante"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        }

                        <!-- SOLO Admin y Restaurante pueden eliminar reservas -->
                        @if (User.IsInRole("Admin") || User.IsInRole("Restaurante"))
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>No hay reservas</h4>
        @if (User.IsInRole("Cliente"))
        {
            <p>¡Haz tu primera reserva!</p>
            <a asp-action="Create" class="btn btn-warning mt-2">Crear Reserva</a>
        }
        else
        {
            <p>No se encontraron reservas.</p>
        }
    </div>
}

@functions {
    public string GetEstadoBadgeClass(string estado)
    {
        return estado switch
        {
            "Pendiente" => "bg-warning",
            "Confirmada" => "bg-success",
            "Cancelada" => "bg-danger",
            "Completada" => "bg-info",
            _ => "bg-secondary"
        };
    }
}